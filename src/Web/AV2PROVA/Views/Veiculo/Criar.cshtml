@using Dominio.Enums
@model AV2PROVA.Models.VeiculoViewModel

<nav class="navbar navbar-light bg-light">
    <div class="container-fluid">
        <span class="navbar-text">
            Pagina Principal >> Cadastro de Veiculo
        </span>
    </div>
</nav>


<div class="container">
    <form asp-action="Criar">
        <div class="card">
            <h5 class="card-header text-center">Formulário Cadastrar Veiculo</h5>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-3 col-xs-4">
                        <label asp-for="Marca" class="form-label"></label>
                        <input type="text" asp-for="Marca" class="form-control" placeholder="Marca do Veiculo">
                        <span asp-validation-for="Marca" class="text-danger"></span>
                    </div>
                    <div class="col-md-3 col-xs-4">
                        <label asp-for="Modelo" class="form-label"></label>
                        <input type="text" asp-for="Modelo" class="form-control" placeholder="Modelo do Veiculo">
                        <span asp-validation-for="Modelo" class="text-danger"></span>
                    </div>
                    <div class="col-md-3 col-xs-4">
                        <label asp-for="Ano" class="form-label"></label>
                        <input type="text" asp-for="Ano" class="form-control" placeholder="Ano do Veiculo">
                        <span asp-validation-for="Ano" class="text-danger"></span>
                    </div>
                    <div class="col-md-3 col-xs-4">
                        <label asp-for="Quilometragem" class="form-label"></label>
                        <input type="text" asp-for="Quilometragem" class="form-control" placeholder="EX. 10.000/KM">
                        <span asp-validation-for="Quilometragem" class="text-danger"></span>
                    </div>
                </div>
            </div>
            <div class="card-footer">
                <div class="row">
                    <div class="col-4">
                        <a asp-controller="Home" asp-action="Index" class="btn btn-secondary">Voltar</a>
                    </div>
                    <div class="col-4 text-center">
                        <input class="btn btn-secondary" type="reset" value="Resetar">
                    </div>
                    <div class="col-4 text-right">
                        <input type="submit" class="btn btn-secondary" value="Gravar" id="btnGravar" />
                    </div>
                </div>
            </div>
        </div>

    </form>
</div>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta2/dist/js/bootstrap.bundle.min.js" integrity="sha384-b5kHyXgcpbZJO/tY9Ul7kGkf1S0CWuKcCD38l8YkeH8z8QjE0GmW1gYU5S9FOnJ0" crossorigin="anonymous"></script>

@section Scripts {
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}